<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/movieListFragment">

    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.example.movies.ui.main.MovieListFragment"
        android:label="Movies"
        tools:layout="@layout/movie_list_fragment">

        <action
            android:id="@+id/action_movieListFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/nav_default_pop_enter_anim"
            app:exitAnim="@anim/nav_default_pop_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.movies.ui.detail.MovieDetailFragment"
        android:label="{title}"
        tools:layout="@layout/movie_detail_fragment">

        <argument
            android:name="title"
            app:argType="string" />

        <argument
            android:name="movie"
            app:argType="com.example.movies.model.Movie" />

    </fragment>
</navigation>